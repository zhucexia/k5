#set($commentUrl = "$rc.getContextPath()/comment/get/$info.id")
#set($postUrl = "$rc.getContextPath()/comment/post/$info.id")
<div class="content-wrapper">
    <div class="article-section" data-aid="$info.id" data-url="$rc.getContextPath()/p/$info.id" id="article-section-$info.id">
        <div class="inner">
            <article class="single-post english-wrap">
                <section class="single-post-header">
                    <header class="single-post-header__meta">
                        <h1 class="single-post__title">$info.title</h1></header>
                    <div class="author"><a data-stat-click="Wenzhang.zuozhe.click" href="$rc.getContextPath()/a/$info.author.id"><span class="avatar before-fade-in after-fade-in" style="background-image: url($info.author.image);"></span><span class="name">$info.author.getNickname()</span></a><span class="time">&nbsp;•&nbsp;<abbr class="timeago" title="$info.getCreateDate()">$info.getCreateDate()</abbr></span></div>
                    <div class="single-post-header__headline"><img alt="" class="image" src="$info.image"></div>
                </section>
                <br>
                <section class="article">
                    $info.content
                </section>
                #if($info.getTags().size() > 0)
                <section class="single-post-tags">
                    <span class="tag-tip">标签：</span>
                        #foreach ($tag in $info.getTags())
                            <span class="tag-item"><a href="$rc.getContextPath()/tag/$tag" target="_blank">$tag</a></span>
                        #end
                    </span>
                </section>
                #end
                <!-- 社交分享 -->
                <section class="single-post-share" data-stat-module="Wenzhang">
                    <ul class="actions">
                        <li><a class="comment-btn J_addCommentBtn" data-post-id="5040832" data-stat-click="pinglunshuliang.click" href="javascript:void(0)"><i class="icon icon-comment"></i><span class="comment_total_count">1</span></a></li>
                    </ul>
                    <div class="single-post-share-list hide-external"><span class="mobile-hide">分享到</span>
                        <div class="share-group">
                            <a class="weixin mobile-hide" data-stat-hover="weixinfenxiang.click" href="javascript:void(0)" ref="nofollow" target="_blank">
                                <i class="icon-weixin"></i>
                                <div class="panel-weixin">
                                    <section class="weixin-section">
                                        <p>
                                            <img alt="【WISE 2.0】左志坚说做了十年内容仍困惑变现，“奇葩说”的马东摇了摇头" src="#">
                                        </p>
                                    </section>
                                    <h3>打开微信“扫一扫”，打开网页后点击屏幕右上角分享按钮</h3>
                                </div>
                            </a>
                            <a class="weibo" data-stat-click="weibofenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-weibo"></i>
                            </a>
                            <a class="linkedin" data-stat-click="linkinfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-linkedin"></i>
                            </a>
                            <a class="qq external mobile-hide" data-stat-click="QQfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-qq"></i>
                            </a>
                            <a class="twitter external mobile-hide" data-stat-click="twfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-twitter"></i>
                            </a>
                            <a class="douban external mobile-hide" data-stat-click="doufanfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-douban"></i>
                            </a>
                            <a class="renren external mobile-hide" data-stat-click="renrenfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-renren"></i>
                            </a>
                            <a class="evernote external mobile-hide" data-stat-click="EVfenxiang.click" href="" ref="nofollow" target="_blank">
                                <i class="icon-evernote"></i>
                            </a>
                            <a class="icon-add J_showAllShareBtn" data-stat-click="gengduofenxiang.click" href="javascript:void(0);"></a>
                        </div>
                    </div>
                </section>
            </article>
            <section class="single-post-comment english-wrap">
                <h2>文章评论(<span class="comment_form_count">1</span>)</h2>
                <div class="single-post-comment-reply">
                    <div class="single-post-comment__form cf require-login" style="display:none;">
                        <form class="comment_form" method="post">
                            <textarea class="textarea" data-widearea="enable" id="post" name="comment[content]" placeholder="你怎么看？"></textarea>
                            <span class="focus-tips textarea-focus-tips">请回复有价值的信息，无意义的评论将很快被删除，账号将被禁止发言。</span>
                            <span class="reply_message reply_msg">回复：吴城<span onclick="delete_reply_comment(this)">X</span></span>
                        </form>
                    </div>
                    <div class="bottom require-login" id="J_userInfo">
                        <div class="meta">
                            <span class="avatar" style=""></span>
                            <span class="user-info">signed as &nbsp;<a href="javascript:void(0)"id="J_loginname">新用户566856</a></span>
                            </span>
                        </div>
                        <button class="ladda-button comment-submit-btn right" data-post-id="5041259" data-spinner-size="32" data-stat-click="pinglun.fabupinglun.click" data-style="slide-down">
                            <span class="ladda-label">提交评论</span>
                        </button>
                    </div>
                    <div style="clear:both"></div>
                    <div class="bottom J_requirelogin">
                        <div class="meta left cf"><a class="login_before_comment" href="http://36kr.com/users/sign_in?ok_url=%2Fp%2F5040832.html">登录</a>后参与讨论</div>
                    </div>
                </div>
                <hr>
                <div async="true" id="J_comments" class="single-post-comment__comments" style="display: block;">
                </div>
            </section>
        </div>
    </div>
</div>
#script()
    require(['widget/detail/detail'], function(app) {
        app({
            commentUrl : "$commentUrl"
        });
    });
#end